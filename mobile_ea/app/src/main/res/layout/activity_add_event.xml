<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin"

    tools:context="com.example.dhana.eventadda.AddEvent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:layout_marginBottom="@dimen/textSize"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Event Name:" />

        <EditText
            android:id="@+id/etEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Event Name"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textViewt67"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Team Size:" />

        <EditText
            android:id="@+id/etEventDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Team Size"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView67"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Team Size:" />

        <EditText
            android:id="@+id/etTeamSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Team Size"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:layout_marginBottom="@dimen/textSize"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=" Enter Time:" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null"
            android:hint="Enter Time" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Location:" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Location"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView14"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Host by:" />

        <EditText
            android:id="@+id/etHost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Host Name"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Details:" />

        <EditText
            android:id="@+id/etDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textSize"
            android:background="@null"
            android:hint="Enter Event Details" />
    </LinearLayout>


    <Button
        android:id="@+id/btnRegEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/btn_Post"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />
</LinearLayout>
