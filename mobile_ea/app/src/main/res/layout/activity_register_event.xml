<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin"
    tools:context="com.example.dhana.eventadda.RegisterEvent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:layout_marginBottom="@dimen/textSize"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Name:" />

        <EditText
            android:id="@+id/etVName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Name"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:layout_marginBottom="@dimen/textSize"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Email:" />

        <EditText
            android:id="@+id/etVEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Email"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Mobile No:" />

        <EditText
            android:id="@+id/etVMobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Enter Mobile No"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
                android:text="TeamSize:" />

        <EditText
            android:id="@+id/etVTeamSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/textSize"
            android:background="@null"
            android:hint="Enter Team Size" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/textSize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding"
        android:background="@drawable/textbg" >

        <TextView
            android:id="@+id/textView67"
            android:layout_width="@dimen/event_text_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="TeamName:" />

        <EditText
            android:id="@+id/etVTeamName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/event_margin"
            android:background="@null"
            android:hint="Enter Team Name" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/btn_register"
        android:background="@color/colorPrimary"
        android:textColor="@color/white" />
</LinearLayout>
