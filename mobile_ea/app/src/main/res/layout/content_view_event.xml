<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dhana.eventadda.viewEvent"
    tools:showIn="@layout/activity_view_event">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/fab_margin"

        android:layout_height="wrap_content"
        android:text="Event Description" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/team"
        android:drawablePadding="5dp"
        android:paddingBottom="@dimen/fab_margin"
        android:singleLine="true"
        android:text="team size" />

    <TextView
        android:id="@+id/txtTeamSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/fab_margin"
        android:drawableLeft="@drawable/team"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="team size"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/fab_margin"
        android:drawableLeft="@drawable/clock"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="time"/>

    <TextView
        android:id="@+id/tvLocation"
        android:paddingBottom="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/loc"

        android:layout_height="wrap_content"
        android:text="location" />

    <TextView
        android:id="@+id/txtHostBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user"
        android:paddingBottom="@dimen/fab_margin"

        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="Host by "/>

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/colorPrimary"
        android:text="@string/participate_event"
        android:textColor="@color/white" />

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
